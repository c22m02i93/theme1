<div class="mpcth-wpml-drop-currency-switcher" >
    <ul class="mpcth-wpml-dropdown">
        <li class="mpcth-wpml-item mpcth-wpml-item-current" >
            <a href="#">{{ get_formatted_price( selected_currency, format )|raw }}</a>
            <ul class="mpcth-wpml-sub-dropdown">
                {% for currency in currencies %}
                    {% if currency != selected_currency %}
                        <li class="mpcth-wpml-item">
                            <a rel="{{ currency }}" class="mpcth-wpml-item-link">{{ get_formatted_price( currency, format )|raw }}</a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </li>
    </ul>
</div>